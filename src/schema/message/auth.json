{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/message/auth.json",

  "type": "object",
  "properties": {
    "type": {
      "type": "integer",
      "minimum": 2,
      "maximum": 2
    },
    "origin": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "sig": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{86}$"
    }
  },
  "required": [
    "type",
    "origin",
    "sig"
  ],
  "additionalProperties": false
}