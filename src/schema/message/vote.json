{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/message/vote.json",

  "type": "object",
  "properties": {
    "origin": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "hash": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "sig": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{86}$"
    }
  },
  "required": [
    "origin",
    "hash",
    "sig"
  ],
  "additionalProperties": false
}