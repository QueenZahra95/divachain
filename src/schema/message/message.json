{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/message/message.json",

  "type": "object",
  "properties": {
    "ident": {
      "type": "string",
      "pattern": "^[A-Za-z0-9,_-]{1,128}$"
    },
    "data": {
      "oneOf": [
        {
          "$ref": "auth.json"
        },
        {
          "$ref": "challenge.json"
        },
        {
          "$ref": "tx-proposal.json"
        },
        {
          "$ref": "vote.json"
        },
        {
          "$ref": "sync.json"
        }
      ]
    },
    "broadcast": {
      "type": "boolean"
    },
    "trail": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Za-z0-9_-]{43}$"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "ident",
    "data",
    "broadcast"
  ],
  "additionalProperties": false
}