{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/message/message.json",

  "type": "object",
  "properties": {
    "ident": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]+$"
    },
    "t": {
      "type": "integer",
      "minimum": 1,
      "maximum": 9
    },
    "dta": {
      "oneOf": [
        {
          "$ref": "auth.json"
        },
        {
          "$ref": "challenge.json"
        },
        {
          "$ref": "vote.json"
        },
        {
          "$ref": "sync.json"
        }
      ]
    },
    "bc": {
      "type": "boolean"
    },
    "trl": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Za-z0-9_-]{43}$"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "ident",
    "t",
    "dta",
    "bc"
  ],
  "additionalProperties": false
}