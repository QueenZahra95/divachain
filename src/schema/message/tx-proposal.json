{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/message/tx-proposal.json",

  "type": "object",
  "properties": {
    "type": {
      "type": "integer",
      "minimum": 3,
      "maximum": 3
    },
    "height": {
      "type": "integer",
      "minimum": 1
    },
    "tx": {
      "$ref": "/schema/block/v3/transaction/tx.json"
    }
  },
  "required": [
    "type",
    "height",
    "tx"
  ],
  "additionalProperties": false
}