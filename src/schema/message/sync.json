{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/message/sync.json",

  "type": "object",
  "properties": {
    "type": {
      "type": "integer",
      "minimum": 6,
      "maximum": 6
    },
    "blocks": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "/schema/block/v1/block.json"
          },
          {
            "$ref": "/schema/block/v2/block.json"
          },
          {
            "$ref": "/schema/block/v3/block.json"
          }
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "type",
    "blocks"
  ],
  "additionalProperties": false
}