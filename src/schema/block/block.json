{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/block.json",

  "type": "object",
  "properties": {
    "v": {
      "type": "integer",
      "minimum": 1
    },
    "ph": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "h": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "tx": {
      "type": "array",
      "items": {
        "$ref": "transaction/tx.json"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "hght": {
      "type": "integer",
      "minimum": 1
    },
    "vts": {
      "type": "array",
      "items": {
        "$ref": "votes.json"
      },
      "uniqueItems": true
    }
  },
  "required": [
    "v",
    "ph",
    "h",
    "tx",
    "hght",
    "vts"
  ],
  "additionalProperties": false
}