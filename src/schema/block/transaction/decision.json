{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/transaction/decision.json",

  "type": "object",
  "properties": {
    "seq": {
      "type": "integer",
      "minimum": 1
    },
    "command": {
      "type": "string",
      "pattern": "^decision$"
    },
    "ns": {
      "type": "string",
      "pattern": "^[A-Za-z:._-]{1,64}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "seq",
    "command",
    "ns"
  ]
}