{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/transaction/remove-peer.json",

  "type": "object",
  "properties": {
    "seq": {
      "type": "integer",
      "minimum": 1
    },
    "command": {
      "type": "string",
      "pattern": "^removePeer$"
    },
    "publicKey": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "seq",
    "command",
    "publicKey"
  ]
}