{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/transaction/modify-stake.json",

  "type": "object",
  "properties": {
    "seq": {
      "type": "integer",
      "minimum": 1
    },
    "command": {
      "type": "string",
      "pattern": "^modifyStake$"
    },
    "publicKey": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "stake": {
      "type": "integer",
      "minimum": -1000,
      "maximum": 1000
    }
  },
  "additionalProperties": false,
  "required": [
    "seq",
    "command",
    "publicKey",
    "stake"
  ]
}