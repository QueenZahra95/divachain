{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/transaction/modifyStake.json",

  "type": "object",
  "properties": {
    "seq": {
      "type": "integer",
      "minimum": 1
    },
    "cmd": {
      "type": "string",
      "pattern": "^modifyStake$"
    },
    "pk": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "stk": {
      "type": "integer",
      "minimum": -1000,
      "maximum": 1000
    }
  },
  "additionalProperties": false,
  "required": [
    "seq",
    "cmd",
    "pk",
    "stk"
  ]
}