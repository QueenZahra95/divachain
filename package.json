{
  "name": "@diva.exchange/diva-blockchain",
  "version": "0.1.0",
  "description": "diva - Distributed value exchange upholding security, reliability and privacy",
  "keywords": [
    "blockchain",
    "pbft",
    "bft",
    "consensus",
    "diva.exchange",
    "p2p",
    "i2p"
  ],
  "author": "Konrad Baechler <konrad@diva.exchange> (https://diva.exchange)",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/diva.exchange/diva-blockchain.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "prettier -w \"{src/*.ts,src/**/*.ts}\" && eslint --fix src/ --ext .ts",
    "start": "tsc ; node dist/main.js",
    "start-dev": "tsc ; NODE_ENV=development node --enable-source-maps dist/main.js",
    "start-dev-trace": "tsc ; NODE_ENV=development LOG_LEVEL=trace node --enable-source-maps dist/main.js",
    "test": "nyc mocha"
  },
  "dependencies": {
    "@hapi/hapi": "^20.1.1",
    "ajv": "^7.2.1",
    "base64-url": "^2.3.3",
    "nanoid": "^3.1.22",
    "pino": "^6.11.2",
    "socks-proxy-agent": "^5.0.0",
    "sodium-native": "^3.2.1",
    "tunnel": "^0.0.6",
    "ws": "^7.4.4"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/base64-url": "^2.2.0",
    "@types/hapi__hapi": "^20.0.5",
    "@types/node": "^14.14.35",
    "@types/pino": "^6.3.6",
    "@types/sodium-native": "^2.3.5",
    "@types/tunnel": "^0.0.2",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "ajv-cli": "^4.2.0",
    "chai": "^4.3.4",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.2",
    "npm-check-updates": "^11.3.0",
    "nyc": "^15.1.0",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "mocha": {
    "spec": "app/test/**/*.spec.ts"
  },
  "nyc": {
    "reporter": [
      "html",
      "text-summary"
    ],
    "include": [
      "app/src/**/*.ts"
    ]
  }
}
