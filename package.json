{
  "name": "@diva.exchange/divachain",
  "version": "0.9.4",
  "description": "diva - Distributed value exchange upholding security, reliability and privacy",
  "bin": "dist/main.js",
  "keywords": [
    "blockchain",
    "pbft",
    "bft",
    "consensus",
    "diva.exchange",
    "p2p",
    "i2p"
  ],
  "author": "Konrad Baechler <konrad@diva.exchange> (https://diva.exchange)",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/diva.exchange/divachain.git"
  },
  "scripts": {
    "build": "bin/build.sh",
    "lint": "prettier -w \"**/*.ts\" && eslint --fix src/ test/ --ext .ts",
    "start": "NODE_ENV=production node dist/main.js | pino-pretty -t -i pid,hostname",
    "start-dev": "NODE_ENV=development ts-node --files src/main.ts | pino-pretty -t -i pid,hostname",
    "test": "test/bin/clean-testenv.sh ; cp genesis/block.json test/genesis/block.json ; TS_NODE_PROJECT=./test/tsconfig.json NODE_ENV=test LOG_LEVEL=trace DEBUG_PERFORMANCE=1 nyc mocha"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "dist/schema/**/*",
      "dist/version",
      "genesis/*",
      "node_modules/sodium-native/prebuilds/linux-x64/*"
    ],
    "targets": [ "node14-linux-x64" ]
  },
  "dependencies": {
    "ajv": "^8.6.3",
    "base64-url": "^2.3.3",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "leveldown": "^6.1.0",
    "levelup": "^5.1.1",
    "nanoid": "^3.1.29",
    "pino": "^6.13.3",
    "simple-get": "^4.0.0",
    "socks-proxy-agent": "^6.1.0",
    "sodium-native": "^3.2.1",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@testdeck/mocha": "^0.1.2",
    "@tsconfig/node14": "^1.0.1",
    "@types/base64-url": "^2.2.0",
    "@types/chai": "^4.2.22",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.24",
    "@types/http-errors": "^1.8.1",
    "@types/leveldown": "^4.0.3",
    "@types/levelup": "^4.3.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.4",
    "@types/pino": "^6.3.11",
    "@types/sodium-native": "^2.3.5",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "ajv-cli": "^5.0.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.2",
    "nyc": "^15.1.0",
    "pino-pretty": "^7.0.1",
    "prettier": "^2.4.1",
    "source-map": "^0.7.3",
    "source-map-support": "^0.5.20",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  }
}
