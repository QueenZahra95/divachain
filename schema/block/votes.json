{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/votes.json",

  "type": "object",
  "properties": {
    "origin": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "hash": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "signature": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{86}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "origin",
    "hash",
    "signature"
  ]
}