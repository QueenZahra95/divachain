{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/block.json",

  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "timestamp": {
      "type": "integer",
      "minimum": 0
    },
    "previousHash": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "hash": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "transactions": {
      "type": "array",
      "items": {
        "$ref": "transaction/transactions.json"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "origin": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "signature": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{86}$"
    },
    "height": {
      "type": "integer",
      "minimum": 1
    },
    "votes": {
      "type": "array",
      "items": {
        "$ref": "votes.json"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "version",
    "timestamp",
    "previousHash",
    "hash",
    "transactions",
    "origin",
    "signature",
    "height",
    "votes"
  ],
  "additionalProperties": false
}