{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/block.json",

  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "created": {
      "type": "integer",
      "minimum": 0
    },
    "previousHash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "transactions": {
      "type": "array",
      "items": {
        "$ref": "transaction/transactions.json"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "proposer": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "signature": {
      "type": "string",
      "pattern": "^[a-f0-9]{128}$"
    },
    "height": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "timestamp",
    "previousHash",
    "hash",
    "transactions",
    "proposer",
    "signature",
    "height"
  ],
  "additionalProperties": false
}