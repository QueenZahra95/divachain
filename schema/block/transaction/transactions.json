{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/transaction/transactions.json",

  "properties": {
    "origin": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "commands": {
      "anyOf": [
        {
          "$ref": "addPeer.json"
        },
        {
          "$ref": "removePeer.json"
        }
      ]
    },
    "sig": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{86}$"
    }
  }
}